{
  "name": "control-universitario",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:gen:academico": "prisma generate --config prisma/academico/prisma.config.ts",
    "prisma:gen:auth": "prisma generate --config prisma/auth/prisma.config.ts",
    "prisma:gen:gestion": "prisma generate --config prisma/gestion/prisma.config.ts",
    "prisma:gen:all": "npm run prisma:gen:auth && npm run prisma:gen:academico && npm run prisma:gen:gestion",
    "prisma:migrate:dev:auth": "prisma migrate dev --config prisma/auth/prisma.config.ts",
    "prisma:migrate:dev:academico": "prisma migrate dev --config prisma/academico/prisma.config.ts",
    "prisma:migrate:dev:gestion": "prisma migrate dev --config prisma/gestion/prisma.config.ts",
    "prisma:migrate:deploy:auth": "prisma migrate deploy --config prisma/auth/prisma.config.ts",
    "prisma:migrate:deploy:academico": "prisma migrate deploy --config prisma/academico/prisma.config.ts",
    "prisma:migrate:deploy:gestion": "prisma migrate deploy --config prisma/gestion/prisma.config.ts",
    "prisma:migrate:deploy:all": "npm run prisma:migrate:deploy:auth && npm run prisma:migrate:deploy:academico && npm run prisma:migrate:deploy:gestion",
    "prisma:push:auth": "prisma db push --config prisma/auth/prisma.config.ts",
    "prisma:push:academico": "prisma db push --config prisma/academico/prisma.config.ts",
    "prisma:push:gestion": "prisma db push --config prisma/gestion/prisma.config.ts",
    "prisma:push:all": "npm run prisma:push:auth && npm run prisma:push:academico && npm run prisma:push:gestion",
    "railway:push": "node scripts/migrate-railway.js push",
    "railway:migrate": "node scripts/migrate-railway.js migrate",
    "railway:create": "node scripts/migrate-railway.js create"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}